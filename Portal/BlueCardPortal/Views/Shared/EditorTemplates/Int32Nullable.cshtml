@using BlueCardPortal.Extensions
@model int?
@{
    var reqClass = ViewData.ModelMetadata.GetIOReqClass();
}
<div class="form-group">
    <label asp-for="@Model" class="form-label @reqClass"></label>
    <input asp-for="@Model" class="form-control form-control--filled no-spinner" pattern="[0-9]+" placeholder="@ViewData.ModelMetadata.Placeholder" />
    <span asp-validation-for="@Model" class="text-danger"></span>
</div>