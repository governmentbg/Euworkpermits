@using BlueCardPortal.Core.Contracts
@using BlueCardPortal.Infrastructure.Constants
@using BlueCardPortal.Infrastructure.Model.Application
@model AddressVM
<div class="row mb-2">
    <div class="col-3">
        @Html.DisplayFor(x => x.Street, "StringNullable")
    </div>
    <div class="col">
        @Html.DisplayFor(x => x.StreetNo, "StringNullable")
    </div>
    <div class="col-3">
        @Html.DisplayFor(x => x.Quarter, "StringNullable")
    </div>
    <div class="col">
        @Html.DisplayFor(x => x.BuildingNo, "StringNullable")
    </div>
    <div class="col">
        @Html.DisplayFor(x => x.Entrance, "StringNullable")
    </div>
    <div class="col">
        @Html.DisplayFor(x => x.Floor, "StringNullable")
    </div>
    <div class="col">
        @Html.DisplayFor(x => x.Apartment, "StringNullable")
    </div>
</div>
<div class="row mb-2">
    <div class="col-5">
        @Html.DisplayFor(x => x.Region, "Nomenclature", new { NomenclatureType = NomenclatureTypes.REGION })
    </div>
    <div class="col-5">
        @Html.DisplayFor(x => x.City, "StringNullable")
    </div>
    <div class="col">
        @Html.DisplayFor(x => x.PostalCode, "Int32Nullable")
    </div>
</div>

