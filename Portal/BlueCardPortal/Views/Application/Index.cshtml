@using Microsoft.Extensions.Localization
@inject IHtmlLocalizer<BlueCardPortal.SharedResource> Localizer

@using BlueCardPortal.Infrastructure.Model.ApplicationList
@model ApplicationFilterVM;
@{
    string title = Localizer["Applications"].Value;

    ViewData["Title"] = title;
    await Html.RenderPartialAsync("_TitleWithBack", title);
}
<div class="row">&nbsp;</div>
<div class="row">
    <div class="col-md-4">
        <a class="u-btn u-btn--search u-bg--c5" data-bs-toggle="offcanvas" data-bs-target="#searchOffcanvas" aria-controls="searchOffcanvas">@Localizer["SearchApplication"]</a>
    </div>
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <a asp-controller="Application" asp-action="Add" class="btn u-btn u-btn--person fw-bold">@Localizer["AddApplication"]</a>
    </div>
</div>

<div id="dvMain" data-url="@Url.Action("ListApplication", "Application")"></div>
<div class="details offcanvas offcanvas-end" tabindex="-1" id="searchOffcanvas" aria-labelledby="searchOffcanvasLabel">
    @{
        await Html.RenderPartialAsync("_ApplicationFilter", Model);
    }
</div>
@section Styles {
    <link href="~/css/gridview.css" rel="stylesheet" />
    <link href="~/css/theme.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/js/gridview.columns.js" asp-append-version="true"></script>
    <script src="~/js/gridview.js" asp-append-version="true"></script>
    <script src="~/js/application-index-all.js" asp-append-version="true"></script>
    <script src="~/js/application-index.js" asp-append-version="true"></script>
}